10  GOSUB 1000: REM INITIALIZE
20  HGR : OUT 128,152: REM GRAPHIC MODE 128X192, 4 COLORS
30  REM DRAW CHECKERBOARD
40  FOR Y = 0 TO 9: FOR X = 0 TO 14
50 C = C0: IF Y + X AND 1 THEN C = C2
60 VV = VRAM + (6 + Y * 18) * 32 + 1 + X * 2
70  FOR A = 0 TO 17
80 V = VV + A * 32: POKE V,C: POKE V + 1,C
90  NEXT A,X,Y
100  REM DRAW CROSSES ON SQUARES CORNERS
110  FOR I = 0 TO 1: REM 0=ALL RED (NORMAL), 1=YELLOW & RED (OPTICAL ILLUSION)
120  FOR Y = 0 TO 8: FOR X = 0 TO 13
130 C = C3: IF I THEN  IF (X + Y +  ABS ((X > 3) + (X > 9) + (Y > 1) + (Y > 6))) AND 1 THEN C = C1
140 VV = VRAM + (6 + Y * 18 + 15) * 32 + 1 + 2 * X + 1
150  FOR A = 0 TO 11
160 V = VV + D(A):B =  PEEK (V): POKE V,(B AND NM(A)) OR (C AND M(A))
170  NEXT A,X,Y,I
180  FOR I = 1 TO 4000: NEXT 
190  GOTO 100
1000  REM INITIALIZE
1010  DIM A,V,B,C,X,Y,I,C3,C1,C0,C2,VV,VRAM
1020 VRAM = 32768: REM BEGINNING OF VRAM
1030 C0 = 000: REM 00000000 = 4 GREEN PIXELS
1031 C1 = 085: REM 01010101 = 4 YELLOW PIXELS
1032 C2 = 170: REM 10101010 = 4 BLUE PIXELS
1033 C3 = 255: REM 11111111 = 4 RED PIXELS
1040  DIM D(11),M(11),NM(11): REM CROSS "SPRITE": DISPLACEMENT FROM FIRST ADDRESS & MASKS
1050  RESTORE 1060: FOR A = 0 TO 11: READ D(A),M(A):NM(A) =  NOT M(A): NEXT A
1060  DATA +  0,  3,+  1,192: REM 00000011 11000000
1061  DATA + 32,  3,+ 33,192: REM 00000011 11000000
1062  DATA + 64, 15,+ 65,240: REM 00001111 11110000
1063  DATA + 96, 15,+ 97,240: REM 00001111 11110000
1064  DATA +128,  3,+129,192: REM 00000011 11000000
1065  DATA +160,  3,+161,192: REM 00000011 11000000
1070  RETURN 
