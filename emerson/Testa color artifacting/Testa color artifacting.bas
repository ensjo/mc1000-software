1050  PRINT "256 X 192 PIXELS, 2 CORES:"
1060  INVERSE : PRINT "159";: NORMAL : PRINT " PRETO+BRANCO (HGR)"
1070  INVERSE : PRINT "157";: NORMAL : PRINT " PRETO+VERDE"
1080  PRINT "128 X 192 PIXELS, 4 CORES:"
1090  INVERSE : PRINT "155";: NORMAL : PRINT " BRANCO+CIANO+MAGENTA+LARANJA";
1100  INVERSE : PRINT "153";: NORMAL : PRINT " VERDE+AMARELO+AZUL+VERMELHO"
1110  PRINT : PRINT "APOS A GERACAO DOS PADROES, USE QUALQUER TECLA PARA ALTERNAR EN-TRE OS MODOS DE VIDEO.";
1120  POKE 284,0
1130  IF  PEEK (284) = 0 THEN 1130
1140  RETURN
