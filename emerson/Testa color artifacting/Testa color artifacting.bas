10  GOSUB 1000
20  HGR : OUT 128, PEEK (245) AND 254: REM HABILITA VRAM PARA ESCRITA
30 VR = 32768: REM ENDERECO DE INICIO DA VRAM
40  REM PREENCHE AS DUAS PRIMEIRAS LINHAS DA VRAM COM PADROES
50  FOR A = 0 TO 63
60 DV = 2: IF A AND 32 THEN DV = 8
70  POKE VR + A,((A / DV) AND 3) * 85
80  NEXT A
90  REM COPIA PARA O RESTO DA VRAM
100  FOR A = 64 TO 32 * 192 - 1
110  POKE VR + A, PEEK (VR + (A AND 63))
120  NEXT A
130  REM ALTERNA ENTRE MODOS DE VIDEO PARA SE AVALIAR O EFEITO
140  FOR A = 159 TO 153 STEP  - 2
150  OUT 128,A
160  POKE 284,0
170  IF  PEEK (284) = 0 THEN 170
180  NEXT A
190  GOTO 140
1000  REM INSTRUCOES
1010  TEXT : HOME
1020  PRINT "TESTE DE ";: INVERSE : PRINT "COLOR ARTIFACTING:": NORMAL
1030  PRINT "PRODUZ 15 PADROES VERTICAIS DE  PONTOS PARA TESTAR SE O TELEVI- SOR PRODUZ CORES 'FANTASMAS'."
